body.dragging,
body.dragging * {
    cursor: move !important;
}

.apps-widget {
    margin-top: 10px;

    .apps .result {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        position: relative;
        user-select: none;

        &:hover {
            background: none;
            cursor: move;
        }
        &.dragged {
            background-color: #FFFFFF;
            border: 0;
            position: absolute !important;
            opacity: 0.5;
            z-index: 2000;

            // !important to override the inline styles added by the JS library.
            height: 62px !important;
            width: 315px !important;

            .compat-info,
            .actions {
                display: none;
            }
        }
    }
    .add-app-group {
        position: absolute;
        top: 0;
        right: 0;

        i {
            display: inline-block;
            margin-right: 3px;
        }

        &:hover,
        i {
            color: #0096dc;
        }
    }
    .app-group-input {
        width: 300px;
    }
    .delete-app-group {
        background: url(../img/close.svg) 50% no-repeat;
        background-size: 18px auto;
        display: inline-block;
        height: 40px;
        width: 40px;

        &:hover {
            background: url(../img/close_active.svg) 50% no-repeat;
            cursor: pointer;
        }
    }
}

.actions {
    i, a {
        display: block;
        width: 40px;
    }
    .reorder {
        color: #ccc;
        font-size: 20px;
        height: 18px;
        position: absolute;
        text-align: center;
        right: 0;

        &:hover {
            color: #0096dc;
        }
        &:first-child{
            line-height: 22px;
            top: 0;
        }
        &:last-child {
            bottom: 0;
            line-height: 14px;
        }
    }
    .delete {
        background: url(../img/close.svg) 50% no-repeat;
        background-size: 13px auto;
        height: 26px;
        position: absolute;
        right: 0;
        top: 18px;

        &:hover {
            background-image: url(../img/close_active.svg);
            cursor: pointer;
        }
    }
}
