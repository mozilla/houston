[data-page-type="shelf_listing"] .main {
    .island {
        position: relative;
    }

    h2 {
        border-bottom: 1px solid #F1F1F1;
        color: #333;
        font-size: 18px;
        font-weight: 200;
        margin-top: 20px;
        padding: 0px 0px 5px 10px;
        
        .count {
            color: #797979;
            margin-left: 5px;
        }

        &:first-child {
            margin-top: 0;
        }
    }
    
    .create {
        font-size: 13px;
        position: absolute;
        right: 30px;
        top: 24px;

        i {
            font-size: 12px;
            margin-right: 5px;
        }
    }
    
    ul {
        list-style: none;
    }
    
    li {
        border-bottom: 1px solid #F1F1F1;
        position: relative;
        
        a.shelf {
            display: block;
            min-height: 52px;
            padding: 10px 10px 10px 52px;
            
            &:hover {
                background: #F5F5F5;
                text-decoration: none;
            }
        }
        
        h3 {
            display: inline-block;
            font-size: 13px;
            font-weight: 400;

            &:hover {
                text-decoration: underline;
            }
        }

        img {
            left: 10px;
            position: absolute;
            top: 10px;
        }
        
        .meta {
            color: #797979;
            display: block;
            font-size: 11px;
            font-weight: 300;
        }
        
        a.button {
            font-size: 12px;
            margin-top: -12px;
            position: absolute;
            right: 10px;
            top: 50%;
        }
    }
    
    p {
        font-weight: 300;
        line-height: 1;
        
        a {
            margin-left: 5px;
        }
    }

}
