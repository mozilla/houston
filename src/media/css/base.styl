/*
We're piggybacking off of fireplace's CSS (fireplace.css in this directory).
Herein lie intentional changes we're making to those styles that don't apply
to this project.
*/

.site-header .wordmark {
    background-image: url(../img/logo.png);
}
#footzilla {
    background-image: url(../img/footer.png);
    background-size: 81px 21px;
}

#page {
    padding-top: 0;
}

.site-header {
    > nav {
        max-width: 100%;
        padding: 0 15px;
    }
    .site {
        width: 202px;
    }
}
    
body[data-page-type] > main {
    padding: 48px 0;
    #page {
        padding: 0;
    }
}

.only-logged-in,
.site-header > nav > .only-logged-in {
    display: none;
    font-size: 14px;
    font-weight: 300;
    .logged-in & {
        display: inline-block;
    }
}

.project {
    border-left: 1px dotted #999;
    color: #E66000;
    font-size: 18px;
    font-weight: 300;
    letter-spacing: -0.5px;
    line-height: 30px;
    margin-left: 12px;
    padding: 3px 0 0 12px;
}

.island {
    margin: 40px 0;
    padding: 20px;
    &:first-child {
        margin-top: 0;
    }
    &:last-child {
        margin-bottom: 0;
    }
    h2 {
        font-size: 20px;
        font-weight: 300;
        color: #1a1a1a;
        line-height: 1.2;  // 24px
    }
}